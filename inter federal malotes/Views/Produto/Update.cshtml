@model Produto

<form asp-controller="Produto" asp-action="Update" method="POST">

    <div class="form-group">
        <label>Descrição</label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao"></span>
    </div>

    <div class="form-group">
        <label>Valor</label>
        <input asp-for="Valor" class="form-control" />
        <span asp-validation-for="Valor"></span>
    </div>

    <div class="form-group">
        <label>Categoria</label>
        <input asp-for="Categoria" class="form-control" />
        <span asp-validation-for="Categoria"></span>
    </div>

    <button class="btn btn-primary">Salvar</button>

</form>